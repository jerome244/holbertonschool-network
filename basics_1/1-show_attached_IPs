#!/usr/bin/env bash
# Display all active IPv4 addresses on this machine, one per line

set -euo pipefail

if command -v ip >/dev/null 2>&1; then
  ip -4 addr show \
    | awk '/inet / {print $2}' \
    | cut -d/ -f1
elif command -v ifconfig >/dev/null 2>&1; then
  ifconfig \
    | awk '/inet / {print $2}' \
    | sed 's/addr://'  # handles older ifconfig formats
else
  echo "Neither 'ip' nor 'ifconfig' is available." >&2
  exit 1
fi
